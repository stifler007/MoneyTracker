<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_item_padding_bottom"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/name"
            style="@style/TextWhite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/price"
            android:background="@color/colorBackgroundNameItem"
            android:paddingEnd="@dimen/card_item_padding_end"
            android:paddingStart="@dimen/card_item_padding_start" />

        <TextView
            android:id="@+id/price"
            style="@style/TextWhite"
            android:layout_width="@dimen/size_130dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:background="@color/colorBackgroundPriceItem"
            android:paddingEnd="@dimen/card_item_padding_end"
            android:paddingStart="@dimen/card_item_padding_start"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>
